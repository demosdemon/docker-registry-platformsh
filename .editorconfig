# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 4

[*.Dockerfile]
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[.gitconfig]
indent_style = tab

[*.go]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2
